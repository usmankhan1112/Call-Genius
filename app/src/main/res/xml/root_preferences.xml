<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/Application">
        <SwitchPreference
            android:defaultValue="true"
            android:key="service"
            android:title="Turn Service On/Off" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="recordOn"
            android:title="Record Calls" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/Notifications">
        <SwitchPreference
            android:defaultValue="false"
            android:key="push_notifications"
            android:title="Push Notifications" />
    </PreferenceCategory>

</PreferenceScreen>
